        "items": [
         {
          "name": "text1",
          "title": "SIMG Name"
         },
         {
          "name": "text4",
          "title": "Rotation"
         },
         {
          "name": "text5",
          "title": "Hospital"
         },
         {
          "name": "text2",
          "inputType": "date",
          "title": "Assessment Date"
         }
        ],
        "colCount": 2
       },
       {
        "type": "text",
        "name": "question8",
        "title": "Assessor"
       },
       {
        "type": "radiogroup",
        "name": "question10",
        "startWithNewLine": false,
        "title": "Assessor Position",
        "choices": [
         {
          "value": "Item 1",
          "text": "Consultant"
         }
        ],
        "showOtherItem": true,
        "otherText": "Other",
        "colCount": 2
       },
       {
        "type": "panel",
        "name": "panel1",
        "elements": [
         {
          "type": "text",
          "name": "question3",
          "title": "Clinical Case",
          "isRequired": true,
          "commentText": "other procedure or part of a procedure"
         },
         {
          "type": "radiogroup",
          "name": "question4",
          "title": "Clinical setting",
          "isRequired": true,
          "choices": [
           {
            "value": "Item 3",
            "text": "Outpatient"
           },
           {
            "value": "Item 1",
            "text": "Emergency Department"
           },
           {
            "value": "Item 4",
            "text": "Ward"
           }
          ],
          "showOtherItem": true,
          "colCount": 2
         },
         {
          "type": "dropdown",
          "name": "question9",
          "startWithNewLine": false,
          "title": "Type of case",
          "isRequired": true,
          "choices": [
           {
            "value": "Item 3",
            "text": "New case"
           },
           {
            "value": "Item 1",
            "text": "Follow-up case"
           }
          ]
         },
         {
          "type": "dropdown",
          "name": "question11",
          "title": "Complexity of case",
          "isRequired": true,
          "choices": [
           {
            "value": "Item 3",
            "text": "Low"
